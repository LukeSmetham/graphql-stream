{
  "name": "graphql-stream",
  "repository": "https://github.com/LukeSmetham/graphql-stream.git",
  "author": "Luke Smetham <luke@smetham.dev>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build:clean": "lerna exec --parallel -- rm -rf lib",
    "build": "yarn build:js && yarn build:graphql",
    "build:js": "lerna --scope @stream-io/* exec --parallel -- babel --root-mode upward src -d lib --ignore lib/**,**/*.spec.js",
    "build:graphql": "lerna --scope @stream-io/* exec --parallel -- rsync -r --include 'src/*' --include '*.graphql' --exclude='*.js' --exclude='*.spec.js' --prune-empty-dirs 'src/' 'lib/'",
    "dev": "yarn workspace @examples/apollo-server dev"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.14.8",
    "@babel/node": "^7.14.7",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.8",
    "apollo-server": "^3.1.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-optional-chaining": "^7.0.0-beta.3",
    "dataloader": "^2.0.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-get-off-my-lawn": "^6.0.1",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "getstream": "^7.2.10",
    "graphql": "^15.5.1",
    "graphql-scalars": "^1.10.0",
    "graphql-subscriptions": "^1.2.1",
    "graphql-tools": "^8.0.0",
    "husky": "^7.0.1",
    "lerna": "4.0.0",
    "lint-staged": "^11.1.1",
    "nodemon": "^2.0.12",
    "phin": "^3.6.0",
    "prettier": "^2.3.2",
    "rsync": "^0.6.1",
    "stream-chat": "^3.13.1"
  }
}
